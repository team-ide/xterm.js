{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": [
      "dom",
      "ES2021"
    ],
    "rootDir": ".",
    "outDir": "../out",
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "../../../src/common/*"
      ],
      "browser/*": [
        "../../../src/browser/*"
      ],
      "@xterm/addon-serialize": [
        "../typings/addon-serialize.d.ts"
      ]
    },
    "strict": true,
    "types": [
      "../../../node_modules/@types/mocha"
    ]
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts"
  ],
  "references": [
    {
      "path": "../../../src/common"
    },
    {
      "path": "../../../src/browser"
    }
  ]
}
